<div class="ele-bottom-grid">
				<h3><span>Điện thoại</span></h3>
<% @products.each do |product| %>
						
<div class="col-md-3 product-men">
							<div class="men-pro-item simpleCart_shelfItem">
								<div class="men-thumb-item">
								<p><%= image_tag product.image.url(:medium), :class=>"pro-image-front", :size=>"autox220" %></p>
								<p><%= image_tag product.image.url(:medium), :class=>"pro-image-back", :size=>"autox220"%></p>
										<div class="men-cart-pro">
											<div class="inner-men-cart-pro">
											        <td><%= link_to 'Show', product ,:class=>"link-product-add-cart"%></td>
											</div>
										</div>										
								</div>
								<div class="item-info-product ">
								<h3><%= product.title %></h3>									
								<div class="info-product-price">
								<span class="item_price"><%= number_to_currency(product.price, unit: " VNĐ",format: "%n %u",:precision => 0) %></span>
									</div>
									<%= button_to 'Add to Cart', line_items_path(:product_id => product),remote: true, :class=>"item_add single-item hvr-outline-out button2" %>
								</div>
							</div>
						</div>
    <% end %>
				</div>
						<div class="clearfix"></div>
							<p><%= will_paginate @products %></p>
</div>
